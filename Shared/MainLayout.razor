        }
        <div class="main">
            <div class="top-row px-2" style="color:#191D27;">
                        <MatH6>Gama Exam</MatH6>
                        <MatButton OnClick="Logout" Label="Log Out"></MatButton>                       

            </div>

            <div class="content px-4">
                @Body
            </div>
        </div>
        <MatToastContainer />
