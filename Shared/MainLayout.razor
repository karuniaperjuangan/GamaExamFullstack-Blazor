@code{
    MatTheme theme = new MatTheme()
    {
        Primary = "green",
        Secondary = "orange"
    };
    void Logout()
    {
        GlobalLoginState.LoggedCreatorID = -1;
        GlobalLoginState.LoggedParticipantID = -1;
        NavigationManager.NavigateTo("/");
    }
}
